.summit-view-twitter
    .media
        margin 15px
        animation summit-view-twitter-drop .5s
        .img
            margin-right 15px
            border-radius 100%
            overflow hidden


@keyframes summit-view-twitter-drop
    0%
        opacity 0
        transform translateY(-20px)
    100%
        opacity 1
        transform translateY(0px)